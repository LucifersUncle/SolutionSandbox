@model IEnumerable<sandbox.web.app.Models.Token>

@{
    ViewData["Title"] = "All Coins";
}
<h1>@ViewData["Title"]</h1>

<p>Use this page to display all available tokens</p>

<table>
    <thead>
        <tr>
            <th>RANK</th>
            <th>SYMBOL</th>
            <th>NAME</th>
            <th>CURRENT PRICE</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var coin in Model)
        {
            <tr>
                <td>@coin.Market_Cap_Rank</td>
                <td><img src=@coin.Image width="30" height="30"></td>
                <td>@coin.Name</td>
                <td>@coin.Current_Price</td>
            </tr>
        }
    </tbody>
</table>